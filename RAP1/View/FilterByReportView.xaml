<UserControl x:Class="RAP.View.FilterByReportView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RAP.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="520">
    <Grid>
        <Label Content="Show:" VerticalAlignment="Center" Width="50" HorizontalAlignment="Center"/>
        <ComboBox x:Name="filterReportBox" HorizontalAlignment="Center" Height="25" Width="150" VerticalAlignment="Center" 
                      ItemsSource="{Binding Source={StaticResource perfLabel}}" SelectedIndex="0" 
                      SelectionChanged="ReportComboBox_SelectionChanged"/>
    </Grid>
</UserControl>
