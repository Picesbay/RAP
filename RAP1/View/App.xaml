<Application x:Class="RAP.View.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:local1="clr-namespace:RAP.Controller"
             xmlns:local2="clr-namespace:RAP.Entity"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <local1:ResearcherController x:Key="rc"/>
        <ObjectDataProvider x:Key="researchersList"
                            ObjectInstance="{StaticResource rc}"
                            MethodName="GetViewableList">
        </ObjectDataProvider>

        <local1:ResearcherController x:Key="level"/>
        <ObjectDataProvider x:Key="employmentLevel"
                            ObjectType="{x:Type sys:Enum}"
                            MethodName="GetValues">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="local2:EmploymentLevel"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
        
    </Application.Resources>
</Application>
