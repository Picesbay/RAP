<Window x:Class="RAP.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RAP.View"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150*"/>
            <ColumnDefinition Width="325*"/>
            <ColumnDefinition Width="325*"/>
        </Grid.ColumnDefinitions>
        <!--<ListBox x:Name="researchersListBox" Margin="0" SelectionChanged="researchersListBox_SelectionChanged"
                 ItemsSource="{Binding Source={StaticResource researchersList}}"/>-->
        <local:FilterByLevel Margin="0" HorizontalAlignment="Left"  VerticalAlignment="Top" Width="100" Height="49" BorderBrush="Black"/>
        <ListBox x:Name="researchersListBox" Margin="0,50,0,30" 
                 ItemsSource="{Binding Source={StaticResource researchersList}}" VerticalAlignment="Center"/>
        
    </Grid>
</Window>
